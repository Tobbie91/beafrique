rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Products collection - public read, admin write
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;

      // Product variants subcollection
      match /variants/{variantId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }

    // Blog collection - public read published posts, admin write
    match /blogs/{blogId} {
      // Anyone can read published posts
      allow read: if resource.data.is_published == true || request.auth != null;
      // Only authenticated users can write
      allow write: if request.auth != null;
    }

    // Orders collection - admin only
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    // Archive designs - public read, admin write
    match /archive_designs/{designId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Roles collection - authenticated users can read their own role
    match /roles/{userId} {
      allow read: if request.auth != null;
      allow write: if false; // Only set via Firebase Console
    }

    // Default: deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
